<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/main.css">
</head>

<body>
    <nav class="nav">
        <a class="nav-link" href="/">Home</a>
        <a class="nav-link active" href="/user/all">List Users</a>
        <a class="nav-link" href="/user/login">Log in</a>
        <a class="nav-link" href="/user/register">Register</a>
    </nav>
    <div class="container">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(data) { %>
                <% for (const user of data) { %>
                <tr id=<%= `row${user.id}` %>>
                    <td><%= user.id %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.surname %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td>
                        <div class="btn-group" data-id=<%= user.id %> role="group" aria-label="Basic example">
                            <button type="button" class="edit-user btn btn-outline-secondary">Edit</button>
                            <button type="button" class="delete-user btn btn-outline-danger">Delete</button>
                        </div>
                    </td>
                    <%  } %>
                    <% } else{ %>
                    <td>
                        <p><strong>No Users found</strong></p>
                        <a href="/user/register">Click here to create new users</a>
                    </td>
                    <%  } %>
                </tr>
            </tbody>
        </table>

        <div id="modal-edit" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form class="user-edit-form">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="editName">Name</label>
                                    <input type="text" class="form-control" id="editName" name="inputName"
                                        placeholder="Name" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="editSurname">Surname</label>
                                    <input type="text" class="form-control" id="editSurname" name="inputSurname"
                                        placeholder="Surname">
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="editEmail">Email</label>
                                    <input type="text" class="form-control" id="editEmail" name="inputEmail"
                                        placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="editPhoneNumber">Phone number</label>
                                <input type="text" class="form-control" id="editPhoneNumber" name="inputPhoneNumber"
                                    placeholder="Phone number">
                            </div>
                            <div class="form-row">
                                <div class=" form-group col-md-6">
                                    <label for="editPassword">Password</label>
                                    <input type="password" class="form-control" id="editPassword" name="inputPassword"
                                        placeholder="Password">
                                </div>
                                <div class=" form-group col-md-6">
                                    <label for="editPasswordConfirm">Confirm password</label>
                                    <input type="password" class="form-control" id="editPasswordConfirm"
                                        placeholder="Confirm password">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="save-edit-user btn btn-primary">Save changes</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>


    </div>
    <script src="/assets/jquery/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/register.js"></script>
</body>

</html>