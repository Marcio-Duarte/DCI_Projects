<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users</title>
  <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/css/main.css">
</head>

<body>
  <%- include('../partials/top_navbar.ejs') %>

  <main class="container-fluid">
    <div id="left-container">
      <form class="register-form col-md-10">
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="inputTitle">Title</label>
            <input type="text" class="form-control" id="inputTitle" name="title" placeholder="Title">
          </div>

          <div class="form-group col-md-12">
            <div class="input-group-prepend">
              <label for="inputDescription">Description</label>
            </div>
            <textarea class="form-control" id="inputDescription" name="description"
              aria-label="With textarea"></textarea>
          </div>
        </div>

        <button type="submit" id="btn-submitUser" class="btn btn-primary" value="Add User">Add</button>
      </form>
    </div>


    <div id="right-container">
      <div class="todo-table col-md-10">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">NÂ°</th>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th class="table-actions" scope="col">Actions</th>
            </tr>
          </thead>


          <tbody>
            <% todos.forEach((todo, i) => { %>
            <tr id=<%= todo.id %> <% if(todo.status) { %> class="task-done" <% } %>>
              <td><%= i+1 %></td>
              <td><%= todo.title %></td>
              <td><%= todo.description %></td>
              <td class="table-actions">
                <div class="form-check form-check-inline">

                  <input class="form-check-input" type="checkbox" id="inlineCheckbox1" <% if(todo.status) { %> checked
                    <% } %>>
                  <label class="form-check-label" for="inlineCheckbox1">Done</label>
                </div>
                <div class="btn-group" role="group" aria-label="Basic example">
                  <button type="button" class="edit-user btn btn-outline-secondary">Edit</button>
                  <button type="button" class="delete-user btn btn-outline-danger">Delete</button>
                </div>
              </td>
              <%  }); %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </main>
  <script src="/assets/jquery/jquery.min.js"></script>
  <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
  <script src="/assets/js/register.js"></script>
  <script src="/assets/js/main.js"></script>
</body>

</html>